<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_additemdialog_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/title_additemdialog"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/itemname_additemdialog_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/hint_itemname_additemdialog"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/AddItemEditTextError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_additemdialog_textview">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/itemname_additemdialog_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/AddItemEditText" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/url_additemdialog_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/hint_url_additemdialog"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/AddItemEditTextError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemname_additemdialog_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/url_additemdialog_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/AddItemEditText"
            android:paddingEnd="40dp"
            />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/clearurl_additemdialog_button"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/ic_clear"
        app:layout_constraintBottom_toBottomOf="@+id/url_additemdialog_layout"
        app:layout_constraintEnd_toEndOf="@+id/url_additemdialog_layout"
        app:layout_constraintTop_toTopOf="@+id/url_additemdialog_layout" />

    <ProgressBar
        android:id="@+id/requestprogress_additemdialog_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url_additemdialog_layout" />

    <TextView
        android:id="@+id/request_status_additemdialog_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/requestprogress_additemdialog_progressbar"
        app:layout_constraintTop_toBottomOf="@+id/url_additemdialog_layout" />


</android.support.constraint.ConstraintLayout>