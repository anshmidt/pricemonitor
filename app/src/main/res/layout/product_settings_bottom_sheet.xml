<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="30dp"
    >


    <TextView
        android:id="@+id/addstore_productsettingsbottomsheet_textview"
        style="@style/ItemBottomSheetTextView"
        android:drawableStart="@drawable/ic_add_store"
        android:text="@string/add_store_product_bottomsheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/delete_product_productsettingsbottomsheet_textview"
        style="@style/ItemBottomSheetTextView"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_delete_forever"
        android:text="@string/delete_product_bottomsheet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addstore_productsettingsbottomsheet_textview" />






</android.support.constraint.ConstraintLayout>